mixin headernav
  nav.navbar.navbar-dark.fixed-top.bg-dark.flex-md-nowrap.p-0.shadow
    a.navbar-brand.col-sm-3.col-md-2.mr-0(href="#") #{title}
  div.fluid-container
    div.row
      nav.col-auto.d-none.d-block.bg-light.sidebar
        div.sidebar-sticky
          ul.nav.flex-column.text-center
            li.nav-item
              a.nav-link(href="#") #{Link1}
            li.nav-item
              a.nav-link(href="#") #{Link2}
            li.nav-item
              a.nav-link(href="#") #{Link3}
            li.nav-item
              a.nav-link(href="#") #{Link4}
