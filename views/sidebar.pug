mixin sidebar
  nav#sidebar
    div.sidebar-header
      h3 #{sidebarTitle}
    ul.list-unstyled.components
      p #{sidebarHeading}
      li
        a(href="#") #{link1}
      li.active
        a.dropdown-toggle(href="#link2Submenu" data-toggle="collapse" aria-expanded="false") #{link2}
        ul#link2Submenu.collapse.list-unstyled
          li
            a(href="#") #{link2Sublink1}
          li
            a(href="#") #{link2Sublink2}
          li
            a(href="#") #{link2Sublink3}
          li
            a(href="#") #{link2Sublink4}
      li
        a(href="#") #{link3}
      li
        a(href="#") #{link4}   
