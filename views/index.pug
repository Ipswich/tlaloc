extends layout.pug

block content
  div.container
    div.row
      div.col-sm(style="text-align: center")
        h1 Overview
        hr
    div.row
      div.col-sm(style="text-align:center")
        form(action="/lightsToggle")
          if (lights.isOn == true)
            input.sprinklerbutton.btn(type="submit" value="Lights Off" style="text-align:center; margin-left:auto; margin-right:auto")
          else
            input.sprinklerbutton.btn(type="submit" value="Lights On" style="text-align:center; margin-left:auto; margin-right:auto")
        hr
    div(style="margin: auto; text-align: left").row
        div.col-sm-6
          if toggles.sprinkler1temperature == true || toggles.sprinkler1watering == true
            h4.col-sm #[u #{content.link2}]
            p Current Temperature: #{sprinkler1.currentTemperature}
            if toggles.sprinkler1watering == true
              if sprinkler1.wateringState == 0
                p Watering: Off
              else
                p.overview Watering: On
            if toggles.sprinkler1temperature == true
              //- p #{sprinkler1.temperatureState}
              if sprinkler1.temperatureState == 0
                p Temperature Control: Off
              else if sprinkler1.temperatureState == -1
                p.overview Temperature Control: Cooling
              else if sprinkler1.temperatureState == 1
                p.overview Temperature Control: Heating
          
        div.col-sm-6
          if toggles.sprinkler2temperature == true || toggles.sprinkler2watering == true
